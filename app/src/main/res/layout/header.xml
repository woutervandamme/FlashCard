<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height">


        <ImageView
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:id="@+id/settingsImagebutton"
            android:src="@drawable/configuration"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:onClick="toSettings"/>
        <!-- title must be set programmaticly -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dummyHeaderTitle"
            android:id="@+id/title_id"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:singleLine="true"
            android:gravity="center"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="@dimen/title_height"
                android:layout_height="@dimen/title_height"
                android:id="@+id/messagesImageView"
                android:src="@drawable/enveloppe"
                android:clickable="true"
                android:onClick="toMessages"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/unreadMessagesTextView"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp" />
        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:id="@+id/questionmarkImageView"
            android:src="@drawable/questionmark"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:onClick="extraInfo"/>

    </LinearLayout>

</LinearLayout>
